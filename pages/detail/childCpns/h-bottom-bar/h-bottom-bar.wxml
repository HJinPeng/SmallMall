  <view class="bar-left bar-item">
    <view class="left-item service">
      <image class="image" src="/assets/detail/service.png"/>
      <view>客服</view>
    </view>
    <view class="left-item shop">
      <image class="image" src="/assets/detail/shop.png"/>
      <view>店铺</view>
