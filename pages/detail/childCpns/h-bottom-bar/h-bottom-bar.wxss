/* pages/detail/childCpns/h-bottom-bar/h-bottom-bar.wxss */
.bottom-bar {
  display: flex;
  height: 120rpx;
  font-size: 30rpx;
  box-shadow: 0 -1px 1px rgba(100, 100, 100, 0.2);
}

.bar-item {
  flex: 1;
  display: flex;
}

.left-item, .right-item {
  flex: 1;
  text-align: center;
}

.left-item {
  font-size: 28rpx;
}

.left-item .image {
  margin-top: 20rpx;
  width: 44rpx;
  height: 44rpx;
}

.right-item {
  line-height: 120rpx;
}

.cart {
  background-color: #ffe817;
}

.buy {
  background-color: #ff5777;
  color: white;
}