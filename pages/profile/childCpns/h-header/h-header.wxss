/* pages/profile/childCpns/h-header/h-header.wxss */
.header{
  display: flex;
  background-color: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
  align-items: center;
}

.avatar .image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f2f2f2;

}

.login-info {
  flex: 1;
  margin-left: 30rpx;
}

.phone {
  font-size: 28rpx;
  margin-top: 6rpx;
}

.phone .image {
  position: relative;
  top: 8rpx;
  width: 36rpx;
  height: 36rpx;

}

.arrow .image {
  width: 60rpx;
  height: 60rpx;
}